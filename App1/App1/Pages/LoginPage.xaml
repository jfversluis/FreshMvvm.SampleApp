<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.LoginPage">
    <!-- TODO Keyboard overlaps form, use ScrollView to overcome this for now -->
    <ScrollView>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"></Entry>
            <Button Text="Login" Command="{Binding Login}"></Button>
        </StackLayout>
    </ScrollView>
</ContentPage>